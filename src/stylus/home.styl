  .filter::-webkit-scrollbar 
    width: 30px;
    height: 15px;
  
  .filter::-webkit-scrollbar-button 
    width: 30px;
    height: 50px;
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;
  
  .filter::-webkit-scrollbar-button:vertical:increment 
    background-image: url(/img/quagmire_recipe_scroll_arrow_down.png);
  
  .filter::-webkit-scrollbar-button:vertical:decrement 
    background-image: url(/img/quagmire_recipe_scroll_arrow_up.png);
  
  
  .filter::-webkit-scrollbar-thumb 
    border: 0px none #ffffff;
    border-radius: 0px;
    border-style: solid;
  
  .filter::-webkit-scrollbar-thumb:vertical 
    border-width: 25px 16px 25px 16px;
    -moz-border-image: url(/img/quagmire_recipe_scroll_handle.png) 25 16 25 16 stretch;
    -webkit-border-image: url(/img/quagmire_recipe_scroll_handle.png) 25 16 25 16 stretch;
    -o-border-image: url(/img/quagmire_recipe_scroll_handle.png) 25 16 25 16 stretch;
    border-image: url(/img/quagmire_recipe_scroll_handle.png) 25 16 25 16 fill stretch;
  
  .filter::-webkit-scrollbar-track 
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 0px;
  
  .filter::-webkit-scrollbar-corner 
    background: transparent;
  


